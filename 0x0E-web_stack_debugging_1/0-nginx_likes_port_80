#!/usr/bin/env bash
# dubug nginx web server to listen to all traffic on port 80

# Specify the path to your Nginx configuration file
nginx_conf="/etc/nginx/nginx.conf"

# Use sed to replace the old listen directive with the new one
sed -i "s/listen [0-9]\+ default_server;/listen 80 default_server;/" "$nginx_conf"

sudo service nginx restart
